{
  "id": "se.faboul.svenskahelgdagar",
  "version": "1.0.5",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Swedish holidays",
    "sv": "Svenska helgdagar"
  },
  "description": {
    "en": "Provides Homey the function to know which days are Swedish holidays",
    "sv": "Ger Homey möjlighet att veta vilka dagar som är helgdagar och inte helgdagar"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Sammy Johannesson",
    "email": "sammy.johannesson@gmail.com"
  },
  "contributors": {
"developers": [
        {
            "name": "Sonny johannesson",
            "email": "sonny.johannesson@gmail.com"
        },
        {
            "name": "Johan Bendz",
            "email": "Johan_Bendz@hotmail.com"
        }
    ]
  },
  "bugs": {
    "url": "https://github.com/sammyjo86/SwedishRedDays/issues"
  },  
  "flow": {
    "conditions": [
      {
          "id": "is_holiday",
          "title": {
              "en": "!{{Is|Isn't}} Swedish holiday",
              "sv": "!{{Är|Är inte}} Svensk helgdag"
          },
          "args": [
            {
                "type": "dropdown",
                "name": "CurrentDay",
                "values": [
                    {
                        "id": "today",
                        "label": {
                            "en": "Today",
                            "sv": "Idag"
                        }
                    },
                    {
                        "id": "yesterday",
                        "label": {
                            "en": "Yesterday",
                            "sv": "Igår"
                        }
                    },
                    {
                      "id": "tomorrow",
                      "label": {
                          "en": "Tomorrow",
                          "sv": "Imorgon"
                      }
                   }
                ]
            }
        ]
        },
        {
            "id": "is_DayOfWork",
            "title": {
                "en": "!{{Swedish day off work|Swedish business day}}",
                "sv": "!{{Helgdag|Arbetsdag}}"
            },
            "args": [
              {
                  "type": "dropdown",
                  "name": "CurrentDay",
                  "values": [
                      {
                          "id": "today",
                          "label": {
                              "en": "Today",
                              "sv": "Idag"
                          }
                      },
                      {
                          "id": "yesterday",
                          "label": {
                              "en": "Yesterday",
                              "sv": "Igår"
                          }
                      },
                      {
                        "id": "tomorrow",
                        "label": {
                            "en": "Tomorrow",
                            "sv": "Imorgon"
                        }
                     }
                  ]
              }
          ]
          },
          {
            "id": "is_MasterHoliday",
            "title": {
                "en": "!{{Is|Isn't}} Specific Swedish holiday",
                "sv": "!{{Specifik helgdag|Inte en specifik helgdag}}"
            },
            "args": [
              {
                  "type": "dropdown",
                  "name": "MasterHoliday",
                  "values": [
                      {
                          "id": "christmas",
                          "label": {
                              "en": "Christmas",
                              "sv": "Jul"
                              
                          }
                      },
                      {
                          "id": "easter",
                          "label": {
                              "en": "Easter weekend",
                              "sv": "Påsk"
                          }
                      },
                      {
                        "id": "pentecost",
                        "label": {
                            "en": "Pentecost (Pingst)",
                            "sv": "Pingst"
                        }
                     }
                     ,
                      {
                        "id": "valborg",
                        "label": {
                            "en": "Walpurgis/1st may (Valborg/1e maj)",
                            "sv": "Valborg/1e maj"
                        }
                     }
                     ,
                      {
                        "id": "newyear",
                        "label": {
                            "en": "New Year",
                            "sv": "Nyår"
                        }
                     }
                     ,
                      {
                        "id": "trettonhelgen",
                        "label": {
                            "en": "Epiphany weekend (Trettonhelgen)",
                            "sv": "Trettonhelgen"
                        }
                     }
                     ,
                     {
                       "id": "midsommar",
                       "label": {
                           "en": "Midsummer",
                           "sv": "Midsommar"
                       }
                    }
                    ,
                    {
                      "id": "Kristi",
                      "label": {
                          "en": "Ascension Day (Kristi himmelfärd)",
                          "sv": "Kristi himmelfärds"
                      }
                   }
                   ,
                   {
                     "id": "skartorsdagen",
                     "label": {
                         "en": "Maundy Thursday (Skärtorsdagen)",
                         "sv": "Skärtorsdagen"
                     }
                  }
                   ,
                {
                  "id": "allahelgonhelgen",
                  "label": {
                      "en": "All Saints Day",
                      "sv": "Alla helgon"
                  }
               }
                  ]
              }
          ]
          },
          {
            "id": "is_FlagDay",
            "title": {
                "en": "!{{Is|Isn't}} Swedish flag day",
                "sv": "!{{Svensk flaggdag|Ej Svensk flaggdag}}"
            }
          }
    ]  
  }
}
